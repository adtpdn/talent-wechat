.nav-container {
    background-color: #1E3A8A;
    padding: 10rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.2);
  }
  
  .nav-container.mobile {
    padding: 0;
  }
  
  .hamburger {
    width: 60rpx;
    height: 60rpx;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    position: absolute;
    top: -60rpx;
    left: 10rpx;
  }
  
  .hamburger-line {
    width: 100%;
    height: 6rpx;
    background-color: #FFFFFF;
    border-radius: 3rpx;
  }
  
  .nav-items {
    display: flex;
    justify-content: space-around;
  }
  
  .nav-item {
    color: #FFFFFF;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    text-align: center;
    flex: 1;
    min-width: 80rpx;
  }
  
  .nav-item.active {
    background-color: #10B981;
    border-radius: 8rpx;
  }
  
  .mobile-hidden {
    display: none;
  }
  
  .mobile-visible {
    display: flex;
    position: absolute;
    bottom: 100%;
    left: 0;
    right: 0;
    background-color: #1E3A8A;
    flex-direction: column;
    padding: 20rpx 0;
  }
  
  @media screen and (max-width: 400px) {
    .nav-item {
      font-size: 20rpx;
      padding: 8rpx 12rpx;
    }
  }