.navbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #1E3A8A;
  padding: 10rpx 0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  height: 100rpx;
}

.navbar.mobile {
  padding: 0;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 22rpx;
  flex: 1;
  padding: 10rpx 0;
}

.nav-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 4rpx;
  filter: brightness(0) invert(1);
}

.nav-item.active {
  font-weight: bold;
}

.nav-item.active .nav-icon {
  filter: brightness(0) invert(1) sepia(1) saturate(5) hue-rotate(175deg);
}

/* Add Button Styles */
.add-button-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
}

.add-button {
  background-color: #10B981;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  transform: translateY(-20rpx);
  transition: transform 0.2s ease;
}

.add-button:active {
  transform: translateY(-15rpx);
}

.add-icon {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: bold;
}

/* Responsive Styles */
@media screen and (max-width: 400px) {
  .nav-item {
    font-size: 20rpx;
    padding: 8rpx 0;
  }
  
  .nav-icon {
    width: 32rpx;
    height: 32rpx;
  }
  
  .add-button {
    width: 60rpx;
    height: 60rpx;
  }
  
  .add-icon {
    font-size: 32rpx;
  }
}