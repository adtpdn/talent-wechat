
.message-container {
  position: fixed;
  bottom: 140rpx; /* Above nav-menu */
  right: 32rpx;
  z-index: 1000;
}

.message-button {
  width: 100rpx;
  height: 100rpx;
  background-color: #1e3a8a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.message-icon {
  width: 48rpx;
  height: 48rpx;
}

.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.popup-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  width: 80%;
  max-height: 80vh;
  padding: 32rpx;
  position: relative;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.back-button {
  font-size: 32rpx;
  color: #1e3a8a;
  padding: 8rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  text-align: center;
}

.close-button {
  font-size: 40rpx;
  color: #666;
  padding: 8rpx;
}

.search-container {
  margin-bottom: 24rpx;
}

.search-input {
  background-color: #f1f3f5;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  height: 64rpx;
  border: 1rpx solid #e9ecef;
}

.talent-list {
  max-height: 60vh;
}

.talent-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.talent-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #e9ecef;
}

.talent-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
}

.talent-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.talent-role {
  font-size: 24rpx;
  color: #666;
}

.no-results {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #999;
}

.message-section {
  display: flex;
  flex-direction: column;
}

.selected-talent {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.message-input-container {
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  background-color: #f1f3f5;
  border-radius: 40rpx;
  padding: 3rpx 20rpx;
  font-size: 26rpx;
  height: 64rpx;
  border: 1rpx solid #e9ecef;
  margin-right: 12rpx;
}

.send-button {
  width: 100rpx;
  height: 64rpx;
  background-color: #1e3a8a;
  color: #fff;
  font-size: 26rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}