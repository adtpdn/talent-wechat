/* Global styles */
page {
    background-color: #F3F4F6;
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  
  .title {
    color: #1E3A8A;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  button {
    background-color: #1E3A8A;
    color: #FFFFFF;
    padding: 10rpx;
    border-radius: 5rpx;
    margin: 5rpx 0;
  }