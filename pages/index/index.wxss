/* Original container styles remain unchanged */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 100rpx;
  overflow-y: auto;
}

/* Updated search section styles */
.search-section {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.search-container {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  padding: 20rpx 24rpx;
  padding-right: 80rpx;
  border: 1rpx solid #E5E7EB;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #F9FAFB;
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #1E3A8A;
  background-color: #FFFFFF;
}

.search-button {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 64rpx;
  height: 64rpx;
  background-color: #1E3A8A;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
}

.search-button-hover {
  opacity: 0.9;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

/* Updated filter slider styles */
/* Filter Slider Container */
.filter-slider {
  width: 100%;
  padding: 12rpx 16rpx;
  white-space: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
}

/* Hide scrollbar for Webkit browsers */
.filter-slider::-webkit-scrollbar {
  display: none;
}

/* Filter Container */
.filter-container {
  display: flex;
  flex-direction: row;
}

/* Filter Items */
.filter-item {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 28rpx;
  margin: 0 8rpx;
  background-color: #F3F4F6;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #4B5563;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid transparent;
}

/* Active state */
.filter-item.active {
  background-color: #1E3A8A;
  color: #FFFFFF;
  font-weight: 600;
  border-color: #1E3A8A;
  box-shadow: 0 2rpx 6rpx rgba(30, 58, 138, 0.3);
}

/* Tap feedback for touch devices */
.filter-item:not(.active):active {
  background-color: #E5E7EB;
  transform: scale(0.98);
}

/* Original talent card styles remain unchanged */
.talent-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(1fr));
  gap: 20rpx;
}

.talent-card-wrapper {
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.talent-card {
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #FFFFFF;
}

.talent-avatar {
  width: 280rpx;
  height: 300rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  object-fit: contain;
}

.talent-info {
  align-self: flex-start;
  flex: 1;
}

.talent-name {
  font-weight: bold;
  font-size: 28rpx;
  color: #1E3A8A;
}

.talent-desc {
  width: 100%;
  max-width: 600rpx;
  font-size: 22rpx;
  color: #6B7280;
  font-weight: 500;
  line-height: 1.6;
  margin-top: 2%;
}

.location-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
}

.location-desc {
  width: 100%;
  max-width: 600rpx;
  font-size: 22rpx;
  color: #6B7280;
  font-weight: 800;
  line-height: 1.6;
}

.location-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 2% auto;
}

.bookmark-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 60rpx;
}

/* Original button styles remain unchanged */
.button-container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.button-wrapper {
  width: 100%;
}

.button {
  width: 100%;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: none;
  line-height: 1.5;
}

.button-hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
}

.button-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  filter: brightness(0) invert(1);
}

.collected-button {
  background-color: #1E3A8A;
}

.wecom-button {
  background-color: #4CAF50;
}

.reset-button {
  background-color: #FF4444;
}

/* Original responsive styles remain unchanged */
@media (max-width: 480rpx) {
  .button {
    padding: 20rpx;
    font-size: 26rpx;
  }
  
  .button-icon {
    width: 32rpx;
    height: 32rpx;
  }

  .filter-item {
    padding: 12rpx 20rpx;
    font-size: 24rpx;
    margin-right: 12rpx;
  }
}

@media screen and (max-width: 400px) {
  .talent-list {
    grid-template-columns: 1fr;
  }
  .search-input {
    font-size: 20rpx;
  }
  .filter-item {
    font-size: 18rpx;
  }
  .talent-name {
    font-size: 24rpx;
  }
  .talent-desc {
    font-size: 18rpx;
  }
}