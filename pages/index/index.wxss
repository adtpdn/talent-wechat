.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  .content {
    flex: 1;
    padding: 20rpx;
    padding-bottom: 100rpx;
    overflow-y: auto;
  }
  
  .search-section {
    background-color: #F3F4F6;
    padding: 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
  }
  
  .search-input {
    width: 100%;
    padding: 10rpx;
    margin-bottom: 10rpx;
    border: 1px solid #1E3A8A;
    border-radius: 5rpx;
  }
  
  .filters {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
  }
  
  .filter-item {
    padding: 5rpx 10rpx;
    background-color: #FFFFFF;
    border-radius: 5rpx;
  }
  
  .search-button {
    width: 100%;
    background-color: #10B981;
    color: #FFFFFF;
    padding: 10rpx;
    border-radius: 5rpx;
  }
  
  .talent-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
    gap: 20rpx;
  }
  
  .talent-card-wrapper {
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .collected-button {
    width: 100%;
    background-color: #1E3A8A;
    color: #FFFFFF;
    padding: 10rpx;
    border-radius: 5rpx;
    margin-top: 20rpx;
  }
  
  .wecom-button {
    width: 100%;
    background-color: #4CAF50; /* Green for WeCom action */
    color: #FFFFFF;
    padding: 10rpx;
    border-radius: 5rpx;
    margin-top: 20rpx;
  }
  
  .reset-button {
    width: 100%;
    background-color: #FF4444;
    color: #FFFFFF;
    padding: 10rpx;
    border-radius: 5rpx;
    margin-top: 20rpx;
  }
  
  @media screen and (max-width: 400px) {
    .talent-list {
      grid-template-columns: 1fr;
    }
    .search-input {
      font-size: 20rpx;
    }
    .filter-item {
      font-size: 18rpx;
    }
  }