.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  .content {
    flex: 1;
    padding: 20rpx;
    padding-bottom: 100rpx; /* Space for bottom navbar */
    overflow-y: auto;
  }
  
  .title {
    margin-bottom: 20rpx;
  }
  
  .input-field {
    width: 100%;
    padding: 10rpx;
    margin: 5rpx 0;
    border: 1px solid #1E3A8A;
    border-radius: 5rpx;
  }
  
  .filter-item {
    padding: 5rpx 10rpx;
    background-color: #FFFFFF;
    border-radius: 5rpx;
    margin: 5rpx 0;
  }
  
  .save-button {
    width: 100%;
    background-color: #10B981;
    color: #FFFFFF;
    margin-top: 20rpx;
  }