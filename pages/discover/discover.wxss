
.discover-container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 200rpx; /* Space for nav-menu */
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.header {
  background: linear-gradient(135deg, #1E3A8A, #3B82F6);
  padding: 32rpx 24rpx 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 24rpx;
  display: block;
}

.search-container {
  position: relative;
  margin-bottom: 8rpx;
}

.search-input {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  padding: 20rpx 80rpx 20rpx 32rpx;
  font-size: 28rpx;
  color: #1E293B;
  height: 80rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

.clear-icon {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

.filter-tabs {
  display: flex;
  padding: 16rpx 24rpx;
  background-color: #fff;
  white-space: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
  border-bottom: 1rpx solid #f1f5f9;
  flex-shrink: 0;
}

.filter-tabs::-webkit-scrollbar {
  display: none;
}

.tab-item {
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #64748B;
  background-color: #f1f5f9;
  flex-shrink: 0;
  transition: all 0.3s ease;
  text-align: center;
}

.tab-item.active {
  background-color: #1E3A8A;
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.2);
}

.talent-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 20rpx;
  padding: 24rpx;
  flex: 1;
  box-sizing: border-box;
  min-height: 0; /* Prevent overflow in scroll-view */
}

.talent-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-sizing: border-box;
  margin: 4% auto;
}

.talent-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.talent-avatar {
  width: 100%;
  object-fit: contain;
  background-color: #e2e8f0;
}

.talent-info {
  padding: 20rpx;
  box-sizing: border-box;
}

.talent-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.talent-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.talent-meta text {
  margin-right: 8rpx;
}

.talent-stats {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f1f5f9;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #64748B;
}

.stat-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
  opacity: 0.7;
}

.loading-more {
  text-align: center;
  padding: 40rpx 0;
  color: #94A3B8;
  font-size: 26rpx;
  grid-column: 1 / -1;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #94A3B8;
  font-size: 28rpx;
  grid-column: 1 / -1;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

nav-menu {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 200;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}