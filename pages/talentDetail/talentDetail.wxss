.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f9fa;
}

.header {
  padding: 30rpx 20rpx;
  color: white;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
  margin-top: 20rpx;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: white;
  border: none;
  flex: 1;
}

.button-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.collect-button {
  background-color: #ffc107;
}

.edit-button {
  background-color: #17a2b8;
}

.share-button {
  background-color: #28a745;
}

.profile-content {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 120rpx;
  overflow-y: auto;
}

.profile-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #343a40;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-item {
  margin-bottom: 16rpx;
}

.info-label {
  font-size: 26rpx;
  color: #6c757d;
  display: block;
  margin-bottom: 4rpx;
}

.info-value {
  font-size: 28rpx;
  color: #495057;
  font-weight: 500;
}