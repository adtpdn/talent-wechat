/* Community Page Styles */
.community-container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.community-header {
  background-color: #ffffff;
  padding: 24rpx 16rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.tab-container {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 8rpx;
  background-color: #fff;
  white-space: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
}

.tab-container::-webkit-scrollbar {
  display: none;
}

.community-tab {
  padding: 10rpx 2rpx;
  margin: 0 8rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f1f3f5;
  flex: 1;
  text-align: center;
  min-width: 120rpx;
}

.community-tab.active {
  background-color: #1e3a8a;
  color: #fff;
  font-weight: 500;
}

.create-post-container {
  background-color: #fff;
  padding: 16rpx;
  margin: 0 16rpx 12rpx;
  display: flex;
  align-items: center;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #e9ecef;
}

.post-input {
  flex: 1;
  background-color: #f1f3f5;
  border-radius: 40rpx;
  padding: 5rpx 20rpx;
  font-size: 26rpx;
  height: 64rpx;
}

.post-list {
  padding: 0 16rpx;
}

.post-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  max-width: 688rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.post-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #e9ecef;
}

.post-user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.post-username {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  max-width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-time {
  font-size: 22rpx;
  color: #999;
}

.event-tag {
  display: inline-block;
  background-color: #e6f7ff;
  color: #1890ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.group-tag {
  display: inline-block;
  background-color: #f6ffed;
  color: #52c41a;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.post-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16rpx;
}

.post-image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  max-height: 300rpx;
  object-fit: cover;
}

.post-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 16rpx;
  border-top: 1rpx solid #f1f3f5;
}

.post-action {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.post-action-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.comment-section {
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.comment-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 12rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.comment-author {
  font-size: 24rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.comment-text {
  font-size: 24rpx;
  color: #333;
  margin: 4rpx 0;
}

.comment-time {
  font-size: 20rpx;
  color: #999;
}

.comment-input-container {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.comment-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background-color: #e9ecef;
}

.comment-input {
  flex: 1;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  height: 48rpx;
  border: 1rpx solid #e9ecef;
}

.comment-submit-button {
  width: 100rpx;
  height: 48rpx;
  background-color: #1e3a8a;
  color: #fff;
  font-size: 24rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
}

.loading-more {
  text-align: center;
  padding: 24rpx;
  color: #999;
  font-size: 24rpx;
}

.empty-community {
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    flex-direction: column;
    padding: 80rpx 0;
}

.empty-community-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-community-text {
  font-size: 26rpx;
  color: #999;
}

.posting-indicator {
  text-align: center;
  padding: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* Nav-Menu Styles */
.navbar {
  display: block;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-width: 100vw;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  box-sizing: border-box;
  padding: 0 env(safe-area-inset-left) 0 env(safe-area-inset-right);
  overflow-x: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.navbar.mobile {
  height: 80rpx;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #666;
  text-align: center;
  max-width: 120rpx;
  min-width: 80rpx;
}

.nav-item.active {
  color: #1e3a8a;
  font-weight: 500;
}

.add-button-container {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  top: -20rpx;
}

.add-button {
  width: 80rpx;
  height: 80rpx;
  background-color: #1e3a8a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.add-icon {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

.inbox-list {
  padding: 0 16rpx;
}

.conversation-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  max-width: 688rpx;
  margin-top: 4%;
}

.conversation-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #e9ecef;
}

.conversation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.conversation-username {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  max-width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.conversation-preview {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}

.conversation-time {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}

.unread-badge {
  position: absolute;
  right: 0;
  top: 0;
  transform: translateY(-50%);
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 3rpx 3rpx;
  border-radius: 100%;
  min-width: 32rpx;
  text-align: center;
}

.empty-inbox {
  text-align: center;
  padding: 80rpx 0;
}

.empty-inbox-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-inbox-text {
  font-size: 26rpx;
  color: #999;
}